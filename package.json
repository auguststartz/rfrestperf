{
  "name": "fax-batch-sender",
  "version": "1.0.0",
  "description": "Electron app for batch fax sending with PostgreSQL tracking and Grafana integration",
  "main": "src/main.js",
  "//": "Note: 'boolean' deprecation warning is from Electron's dependencies and can be safely ignored",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "db:migrate": "node src/database/migrate.js"
  },
  "keywords": [
    "electron",
    "fax",
    "batch",
    "postgresql",
    "grafana"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "pg": "^8.13.1",
    "dotenv": "^16.4.7",
    "form-data": "^4.0.1",
    "winston": "^3.17.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3"
  },
  "overrides": {
    "glob": "^10.4.5",
    "inflight": "npm:@lukekarrys/inflight@^2.0.1",
    "boolean": "^3.2.0"
  },
  "build": {
    "appId": "com.faxbatch.app",
    "productName": "Fax Batch Sender",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
